{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true  
  },
  "extends": [
    "eslint:recommended", 
    "plugin:prettier/recommended",
    "plugin:jest/recommended" 
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jest" // Necesario para que funcione la extensi√≥n
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "consistent-return": "warn"
  }
}